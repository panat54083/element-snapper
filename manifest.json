{
  "manifest_version": 3,
  "name": "Element Snapper",
  "version": "1.2.1",
  "description": "Capture pixel-perfect screenshots of elements, viewport, or full pages with clipboard support and delayed capture",

  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "clipboardWrite"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background/service_worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
