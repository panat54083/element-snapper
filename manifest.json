{
  "manifest_version": 3,
  "name": "Element Snapper",
  "version": "1.0.0",
  "description": "Capture precise screenshots of any element with smart cropping and device pixel ratio support",

  "permissions": ["activeTab", "tabs", "scripting", "downloads", "storage"],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background/service_worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/utils.js",
        "content/element_selector.js",
        "content/content-main.js"
      ],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
